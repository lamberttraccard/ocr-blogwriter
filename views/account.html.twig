{% extends 'layout.html.twig' %}

{% block beforeTitle %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="image is-64x64 is-inline-block has-mb-1">
            <img src="{{ app.user.gravatar }}" alt="avatar">
        </div>
    {% endif %}
{% endblock %}
{% block siteTitle %}Mon compte{% endblock %}
{% block title %}Mon compte{% endblock %}
{% block subtitle %}{% endblock %}

{% block heroBodyExtra %}
    <a href="{{ path('logout') }}" class="button is-primary is-outlined is-inverted has-mt-1">
        <span>Se d√©connecter</span><span class="icon"><i class="fa fa-sign-out"></i></span>
    </a>
{% endblock %}

{% block heroFoot %}
    <nav id="tabs" class="tabs is-boxed is-medium is-fullwidth">
        <div class="container">
            <ul>
                <li><a>Episodes</a></li>
                <li><a>Details</a></li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <section class="section is-medium the-content">
        <div id="tabs-container" class="container">

            {% include('partials/account_episodes.html.twig') %}
            {% include('partials/account_details.html.twig') %}

        </div>
    </section>
{% endblock %}
