{% extends 'layout.html.twig' %}

{% block siteTitle %}{{ title }}{% endblock %}
{% block title %}{{ title }}{% endblock %}
{% block subtitle %}{% endblock %}

{% block content %}
    <section class="section is-medium">
        <div class="container">
            <div class="panel">
                {{ form_start(commentForm) }}
                <div class="control">
                    {{ form_label(commentForm.content, 'Commentaire') }}
                    {{ form_errors(commentForm.content) }}
                    {{ form_widget(commentForm.content) }}
                </div>
                <div class="control">
                    <a href="{{ path('admin') }}" class="button is-danger is-medium">Annuler</a>
                    <button class="button is-primary is-medium pull-right">Valider</button>
                </div>
                {{ form_end(commentForm) }}
            </div>
        </div>
    </section>
{% endblock %}