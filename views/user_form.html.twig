{% extends 'layout.html.twig' %}

{% block siteTitle %}{{ title }}{% endblock %}
{% block title %}{{ title }}{% endblock %}
{% block subtitle %}{% endblock %}

{% block content %}
    <section class="section is-medium">
        <div class="container">

            <div class="panel">
                {{ form_start(userForm) }}
                <div class="control">
                    {{ form_label(userForm.username, 'Username') }}
                    {{ form_errors(userForm.username) }}
                    {{ form_widget(userForm.username) }}
                </div>
                <div class="control">
                    {{ form_label(userForm.password.first, 'Mot de passe') }}
                    {{ form_errors(userForm.password.first) }}
                    {{ form_widget(userForm.password.first) }}
                </div>
                <div class="control">
                    {{ form_label(userForm.password.second, 'Confirmer mot de passe') }}
                    {{ form_widget(userForm.password.second) }}
                </div>
                <div class="control">
                    {{ form_label(userForm.role, 'Role') }}
                    {{ form_errors(userForm.role) }}
                    {{ form_widget(userForm.role) }}
                </div>
                <div class="control">
                    <a href="{{ path('admin') }}" class="button is-danger is-medium">Annuler</a>
                    <button class="button is-primary is-medium pull-right">Valider</button>
                </div>
                {{ form_end(userForm) }}
            </div>
        </div>
    </section>
{% endblock %}