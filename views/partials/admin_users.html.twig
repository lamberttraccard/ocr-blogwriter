<section>
    <a href="{{ path('admin_user_add') }}" class="button is-primary is-pulled-right is-medium has-mb-2">
        <span>Ajouter un utilisateur</span><span class="icon"><i class="fa fa-plus-circle"></i></span>
    </a>
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Avatar</th>
            <th>Username</th>
            <th class="is-hidden-mobile">Email</th>
            <th>Role</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td><span class="image is-48x48"><img src="{{ user.gravatar }}" alt="avatar"></span></td>
                <td class="is-capitalize">{{ user.username }}</td>
                <td class="is-hidden-mobile">{{ user.email }}</td>
                <td class="is-capitalize">{{ user.formatedRole }}</td>
                <td class="has-text-right">
                    <a href="{{ path('admin_user_edit', {'id': user.id }) }}"
                       class="button is-warning">
                        <span class="icon"><i class="fa fa-edit"></i></span>
                    </a>
                    <a href="{{ path('admin_user_delete', {'id': user.id }) }}"
                       class="button is-danger">
                        <span class="icon"><i class="fa fa-remove"></i></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>