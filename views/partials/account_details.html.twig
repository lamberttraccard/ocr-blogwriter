<section>
    <div class="columns">
        <div class="column is-half is-offset-one-quarter">
            <div class="panel">
                {{ form_start(userForm) }}
                <div class="control">
                    {{ form_label(userForm.username, 'Username') }}
                    {{ form_errors(userForm.username) }}
                    {{ form_widget(userForm.username) }}
                </div>
                <div class="control">
                    {{ form_label(userForm.password.first, 'Mot de passe') }}
                    {{ form_errors(userForm.password.first) }}
                    {{ form_widget(userForm.password.first) }}
                </div>
                <div class="control">
                    {{ form_label(userForm.password.second, 'Confirmer mot de passe') }}
                    {{ form_widget(userForm.password.second) }}
                </div>
                <div class="control">
                    <button class="button is-primary is-medium pull-right">Modifier</button>
                </div>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
</section>